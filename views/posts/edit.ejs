<% layout("layouts/boilerplate") %>
<style>
    /* Reset default browser spacing */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box; 
    }

    body {
        font-family: "Segoe UI", system-ui, sans-serif;
    }

    /* ---------- PAGE BACKGROUND ---------- */
    .form-page {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(
            135deg,
            #e0f7fa,   
            #e8f5e9    
        );
        padding: 40px 20px;
    }

    /* ---------- FORM CARD ---------- */
    .post-form {
        width: 100%;
        max-width: 420px;
        background: #ffffff;
        padding: 32px 28px;
        border-radius: 18px;
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.12);
        font-family: "Segoe UI", system-ui, sans-serif;
        animation: fadeUp 0.6s ease;
    }

    /* ---------- TITLE ---------- */
    .post-form h2 {
        text-align: center;
        color: #2e7d32; /* travel green */
        margin-bottom: 6px;
        font-size: 24px;
    }

    .subtitle {
        text-align: center;
        font-size: 14px;
        color: #607d8b;
        margin-bottom: 26px;
    }

    /* ---------- FORM GROUP ---------- */
    .form-group {
        margin-bottom: 18px;
    }

    .form-group label {
        display: block;
        margin-bottom: 6px;
        font-size: 14px;
        color: #37474f;
        font-weight: 600;
    }

    /* ---------- INPUTS ---------- */
    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 12px 14px;
        border-radius: 10px;
        border: 1.5px solid #cfd8dc;
        font-size: 14px;
        transition: 0.25s ease;
        outline: none;
        font-family: inherit;
    }

    /* ---------- FOCUS EFFECT ---------- */
    .form-group input:focus,
    .form-group textarea:focus {
        border-color: #4caf50;
        box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.15);
    }

    /* ---------- TEXTAREA ---------- */
    .form-group textarea {
        min-height: 110px;
        resize: vertical;
    }

    /* ---------- BUTTON ---------- */
    .post-form button {
        width: 100%;
        padding: 12px;
        margin-top: 6px;
        background: linear-gradient(
            135deg,
            #43a047,  /* green */
            #1e88e5   /* blue */
        );
        border: none;
        border-radius: 12px;
        color: #ffffff;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    /* ---------- BUTTON HOVER ---------- */
    .post-form button:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 22px rgba(30, 136, 229, 0.35);
    }

    /* ---------- ANIMATION ---------- */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ---------- MOBILE ---------- */
    @media (max-width: 480px) {
        .post-form {
            padding: 26px 22px;
        }

        .post-form h2 {
            font-size: 22px;
        }
    }

</style>


<div class="form-page">
    <form class="post-form" action="/posts/<%= post.id %>?_method=PUT" method="post">
    
        <h2>Edit Your Post üåç</h2>
        <p class="subtitle">Share your journey with the world</p>
    
        <div class="form-group">
            <label>Username</label>
            <input type="text" name="post[username]" value="<%= post.username %>" required>
        </div>
    
        <div class="form-group">
            <label>Write content</label>
            <textarea name="post[content]" required><%= post.content %></textarea>
        </div>

        <div class="form-group">
            <label for="">Location</label>
            <input type="text" name = "post[location]" value="<%= post.location%>" required>
        </div>

        <div class="form-group">
            <label>Country</label>
            <input type="text" name = "post[country]" value="<%= post.country%>" required>
        </div>
    
        <button type="submit">Update Post</button>
    
    </form>
</div>