<% layout("layouts/boilerplate") %>

<style>
  body {
    min-height: 100vh;
    background:
        radial-gradient(
            800px circle at 10% 10%,
            rgba(30, 144, 255, 0.12),transparent 40%
        ),
        radial-gradient(
            600px circle at 90% 20%,
            rgba(0, 188, 212, 0.12),transparent 40%
        ),
        linear-gradient(135deg,#f8fafc,#eef2f7);
    }


  /* MAIN CARD */
  .edit-container {
    max-width: 560px;               
    margin: 32px auto;
    padding: 24px 26px;
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    font-family: Inter, system-ui, sans-serif;
    backdrop-filter: blur(6px);
  }

  /* HEADER */
  .edit-header {
    margin-bottom: 18px;
  }

  .edit-header h1 {
    font-size: 22px;               /* ðŸ”¹ smaller title */
    font-weight: 600;
    margin-bottom: 4px;
  }

  .edit-header p {
    font-size: 13px;
    color: #666;
  }

  /* FORM */
  .edit-form {
    display: flex;
    flex-direction: column;
    gap: 14px;                     /* ðŸ”¹ tighter spacing */
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 4px;
    color: #444;
  }

  .form-group input,
  .form-group textarea {
    padding: 10px 12px;            /* ðŸ”¹ compact inputs */
    border-radius: 8px;
    border: 1px solid #ddd;
    font-size: 13px;
    outline: none;
    transition: 0.2s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-color: #1e90ff;
    box-shadow: 0 0 0 2px rgba(30,144,255,0.15);
  }

  textarea {
    resize: vertical;
    min-height: 80px;              /* ðŸ”¹ smaller textarea */
  }

  /* GRID ROW */
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  /* IMAGE PREVIEW */
  .image-preview {
    margin-top: 8px;
    height: 140px;                 /* ðŸ”¹ smaller image */
    border-radius: 10px;
    overflow: hidden;
    border: 1px solid #eee;
  }

  .image-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* ACTIONS */
  .form-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
  }

  .btn-cancel {
    font-size: 13px;
    color: #666;
    text-decoration: none;
  }

  .btn-update {
    background: linear-gradient(135deg, #1e90ff, #00bcd4);
    color: white;
    border: none;
    padding: 10px 22px;            /* ðŸ”¹ slimmer button */
    border-radius: 999px;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(30,144,255,0.3);
    transition: 0.2s ease;
  }

  .btn-update:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 26px rgba(30,144,255,0.4);
  }

  /* MOBILE */
  @media (max-width: 520px) {
    .edit-container {
      margin: 20px;
      padding: 20px;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-actions {
      flex-direction: column;
      gap: 10px;
    }

    .btn-update {
      width: 100%;
    }
  }
</style>

<div class="edit-container">

  <!-- HEADER -->
  <div class="edit-header">
    <h1>Edit Listing</h1>
    <p>Update your listing details</p>
  </div>

  <!-- FORM -->
  <form 
    class="edit-form" 
    action="/listings/<%= listing._id %>?_method=PUT" 
    method="POST"
  >

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="listing[title]" value="<%= listing.title %>" required>
    </div>

    <div class="form-group">
      <label>Description</label>
      <textarea name="listing[description]"><%= listing.description %></textarea>
    </div>

    <div class="form-group">
      <label>Image URL</label>
      <input type="text" name="listing[img]" value="<%= listing.img %>">
      <div class="image-preview">
        <img src="<%= listing.img %>" alt="Preview">
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label>Price (â‚¹)</label>
        <input type="number" name="listing[price]" value="<%= listing.price %>" required>
      </div>

      <div class="form-group">
        <label>Country</label>
        <input type="text" name="listing[country]" value="<%= listing.country %>">
      </div>
    </div>

    <div class="form-group">
      <label>Location</label>
      <input type="text" name="listing[location]" value="<%= listing.location %>">
    </div>

    <div class="form-actions">
      <a href="/listings/<%= listing._id %>" class="btn-cancel"><b>Cancel</b></a>
      <button type="submit" class="btn-update">Save Changes</button>
    </div>

  </form>
</div>
