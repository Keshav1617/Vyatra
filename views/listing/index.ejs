<% layout("layouts/boilerplate") %>

    <style>
/* =========================
   RESET & BASE
========================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}


/* =========================
   NAVBAR
========================= */


/* BRAND */
.brand-logo-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-box {
  width: 42px;
  height: 42px;
  border-radius: 14px;
  background: linear-gradient(135deg, #38bdf8, #6366f1);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  font-size: 18px;
}

.brand-name {
  margin-top: 5px;
  font-size: 13px;
  font-weight: 700;
  color: #0f172a;
}

/* NAV LINKS */
.navbar-nav .nav-link {
  font-size: 14px;
  font-weight: 600;
  color: #334155;
  padding: 8px 14px;
  border-radius: 10px;
  transition: all 0.25s ease;
}

.navbar-nav .nav-link:hover {
  background: rgba(56, 189, 248, 0.15);
  color: #0284c7;
}

.navbar-nav .nav-link.active {
  color: #0284c7;
}


/* SEARCH */
.navbar-search {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.9);
  border-radius: 999px;
  padding: 6px 10px;
  border: 1px solid rgba(15,23,42,0.08);
  box-shadow: 0 6px 18px rgba(15,23,42,0.12);
}

.search-input {
  border: none;
  outline: none;
  background: transparent;
  font-size: 14px;
  padding: 6px 10px;
  width: 200px;
}

.search-btn {
  background: linear-gradient(135deg, #38bdf8, #6366f1);
  border: none;
  color: white;
  padding: 7px 10px;
  border-radius: 50%;
  cursor: pointer;
}

/* =========================
   LISTINGS
========================= */
.listing-section {
  padding: 32px 40px 60px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 22px;
}

.section-title {
  font-size: 22px;
  font-weight: 600;
}

.section-header button {
  padding: 8px 18px;
  border-radius: 999px;
  border: 1px solid rgba(15,23,42,0.12);
  background: transparent;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.25s ease;
}

.section-header button:hover {
  background: rgba(255,255,255,0.5);
}

.listing-container {
  display: flex;
  gap: 18px;
  overflow-x: auto;
  padding-bottom: 10px;
}

.listing-container::-webkit-scrollbar {
  display: none;
}

.listing-card {
  min-width: 260px;
  transition: transform 0.25s ease;
}

.listing-card:hover {
  transform: translateY(-6px);
}

.image-wrapper {
  position: relative;
  height: 260px;
  border-radius: 16px;
  overflow: hidden;
}

.image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.35s ease;
}

.listing-card:hover img {
  transform: scale(1.04);
}

.badge {
  position: absolute;
  top: 12px;
  left: 12px;
  padding: 6px 14px;
  font-size: 12px;
  font-weight: 600;
  background: rgba(255,255,255,0.9);
  border-radius: 999px;
}

.heart {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 22px;
  color: white;
}

.card-content {
  padding-top: 10px;
}

.card-content h3 {
  font-size: 15px;
  font-weight: 600;
}

.location {
  font-size: 14px;
  color: #64748b;
}

.price,
.rating {
  font-size: 14px;
}

.listing-link {
  text-decoration: none;
  color: inherit;
}

/* =========================
   ABOUT SECTION ‚Äì MODERN
========================= */

.about-section {
  max-width: 1200px;
  margin: 140px auto;
  padding: 0 40px;
}

/* grid */
.about-grid {
  display: grid;
  grid-template-columns: 1.05fr 0.95fr;
  gap: 80px;
  align-items: center;
}

/* LEFT */
.about-left {
  position: relative;
  max-width: 520px;
}

/* pill */
.about-pill {
  display: inline-block;
  padding: 6px 14px;
  font-size: 13px;
  font-weight: 600;
  color: #0284c7;
  background: rgba(56,189,248,0.18);
  border-radius: 999px;
  margin-bottom: 20px;
}

/* heading */
.about-heading {
  font-size: 42px;
  font-weight: 750;
  line-height: 1.15;
  letter-spacing: -0.6px;
  margin-bottom: 22px;
}

.about-heading span {
  color: #0284c7;
}

/* lead */
.about-lead {
  font-size: 17px;
  font-weight: 500;
  color: #0f172a;
  margin-bottom: 14px;
}

/* body */
.about-body {
  font-size: 16px;
  line-height: 1.9;
  color: #475569;
  margin-bottom: 28px;
}

/* CTA */
.about-link {
  font-size: 15px;
  font-weight: 600;
  color: #0284c7;
  text-decoration: none;
  position: relative;
}

.about-link::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -4px;
  width: 100%;
  height: 2px;
  background: #0284c7;
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.25s ease;
}

.about-link:hover::after {
  transform: scaleX(1);
}

/* RIGHT */
.about-right {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

/* cards */
.about-card {
  padding: 18px 20px;
  border-radius: 16px;

  background: linear-gradient(
    180deg,
    rgba(236, 253, 245, 0.95),
    rgba(209, 250, 229, 0.9)
  );

  backdrop-filter: blur(14px);
  border: 1px solid rgba(15, 23, 42, 0.08);
  box-shadow: 0 14px 32px rgba(15, 23, 42, 0.12);

  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.about-card:hover {
  transform: translateY(-6px);
  box-shadow:
    0 20px 44px rgba(15, 23, 42, 0.16),
    0 0 0 1px rgba(16, 185, 129, 0.25);
}

.about-card h4 {
  margin-top: 8px;
  font-size: 14.5px;
  font-weight: 600;
}

.about-card p {
  margin-top: 4px;
  font-size: 13.5px;
  color: #64748b;
  line-height: 1.6;
}

/* =========================
   RESPONSIVE
========================= */

@media (max-width: 900px) {
  .about-grid {
    grid-template-columns: 1fr;
    gap: 60px;
  }

  .about-heading {
    font-size: 32px;
  }

  .about-right {
    grid-template-columns: 1fr;
  }
}




</style>


