<% layout("layouts/boilerplate") %>

<style>
    .listing-section {
        padding: 20px 40px;
    }

    .section-title {
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .listing-container {
        display: flex;
        gap: 16px;
        overflow-x: auto;
    }

    .listing-container::-webkit-scrollbar {
        display: none;
    }

    .listing-card {
        min-width: 260px;
        cursor: pointer;
    }

    .image-wrapper {
        position: relative;
        height: 260px;
        border-radius: 14px;
        overflow: hidden;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: white;
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .heart {
        position: absolute;
        top: 12px;
        right: 12px;
        font-size: 22px;
        color: white;
    }

    .card-content {
        padding-top: 8px;
    }

    .card-content h3 {
        font-size: 15px;
        font-weight: 600;
    }

    .location {
        color: #717171;
        font-size: 14px;
    }

    .price {
        font-size: 14px;
    }

    .price span {
        color: #717171;
    }

    .rating {
        font-size: 14px;
    }

    .listing-link {
        text-decoration: none;
        color: inherit;
    }

    .listing-link:hover {
        transform: scale(1.01);
    }

</style>


<section class="listing-section">
  <h2 class="section-title">
    Popular stays
    <span class="arrow">›</span>
  </h2>

  <div class="listing-container">

      
    <% alllistings.forEach(listing => { %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
    
          <div class="listing-card">
            <div class="image-wrapper">
    
              <% if (listing.rating >= 4.8) { %>
                <span class="badge">Guest favourite</span>
              <% } %>
    
              <span class="heart">♡</span>
    
              <img 
                src="<%= listing.img %>" 
                alt="<%= listing.title %>"
                loading="lazy"
              >
            </div>
    
            <div class="card-content">
              <h3><%= listing.title %></h3>
    
              <p class="location">
                <%= listing.location %>, <%= listing.country %>
              </p>
    
              <p class="price">
                ₹<%= listing.price %> 
                <span>for 2 nights</span>
              </p>
    
              <p class="rating">
                ★ <%= listing.rating || "New" %>
              </p>
            </div>
          </div>
        </a>
    <% }) %>

  </div>
</section>
