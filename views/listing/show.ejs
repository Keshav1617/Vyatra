<% layout("layouts/boilerplate") %>

<style>
  .show-container {
    max-width: 1200px;
    margin: 30px auto;
    padding: 0 20px;
    font-family: Inter, sans-serif;
  }

  /* HEADER */
  .show-header h1 {
    font-size: 28px;
    font-weight: 600;
  }

  .sub-header {
    margin-top: 6px;
    color: #555;
    font-size: 15px;
  }

  /* IMAGE GRID */
  .image-grid {
    margin-top: 20px;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    grid-template-rows: repeat(2, 1fr);
    gap: 8px;
    border-radius: 16px;
    overflow: hidden;
  }

  .image-grid img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-grid img:first-child {
    grid-row: span 2;
  }

  /* MAIN LAYOUT */
  .show-main {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 40px;
    margin-top: 30px;
  }

  /* LEFT CONTENT */
  .details h2 {
    font-size: 22px;
    font-weight: 600;
  }

  .meta {
    margin: 8px 0 16px;
    color: #555;
  }

  .description {
    line-height: 1.6;
    color: #333;
  }

  /* BOOKING CARD */
  .booking-card {
    border: 1px solid #e0e0e0;
    border-radius: 14px;
    padding: 20px;
    position: sticky;
    top: 90px;
    height: fit-content;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .price {
    font-size: 22px;
    font-weight: 600;
  }

  .price span {
    font-size: 14px;
    color: #777;
  }

  .date-box {
    margin: 16px 0;
    border: 1px solid #ccc;
    border-radius: 10px;
    overflow: hidden;
  }

  .date-box div {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    font-size: 14px;
  }

  .date-box div:last-child {
    border-bottom: none;
  }

  .reserve-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, #ff385c, #e31c5f);
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
  }

  .reserve-btn:hover {
    opacity: 0.9;
  }

  /* RESPONSIVE */
  @media (max-width: 900px) {
    .image-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }

    .show-main {
      grid-template-columns: 1fr;
    }

    .booking-card {
      position: static;
    }
  }
</style>

<div class="show-container">

  <!-- HEADER -->
  <div class="show-header">
    <h1><%= listing.title %></h1>
    <p class="sub-header">
      <%= listing.location %>, <%= listing.country %>
    </p>
  </div>

  <!-- IMAGE GRID -->
  <div class="image-grid">
    <img src="<%= listing.img %>" alt="">
    <img src="<%= listing.img %>" alt="">
    <img src="<%= listing.img %>" alt="">
    <img src="<%= listing.img %>" alt="">
    <img src="<%= listing.img %>" alt="">
  </div>

  <!-- MAIN CONTENT -->
  <div class="show-main">

    <!-- LEFT -->
    <div class="details">
      <h2>Entire rental unit</h2>
      <p class="meta">
        2 guests · 1 bedroom · 1 bed · 1 bathroom
      </p>

      <p class="description">
        <%= listing.description || "A beautiful stay curated for comfort, peace, and a premium experience." %>
      </p>
    </div>

    <!-- RIGHT -->
    <div class="booking-card">
      <p class="price">
        ₹<%= listing.price %> <span>for 2 nights</span>
      </p>

      <div class="date-box">
        <div>CHECK-IN<br><strong>06/02/2026</strong></div>
        <div>CHECK-OUT<br><strong>08/02/2026</strong></div>
      </div>

      <button class="reserve-btn">
        Reserve
      </button>
    </div>

  </div>
</div>
