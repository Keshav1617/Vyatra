<% layout("layouts/boilerplate") %>

<style>
    /* Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    /* Page background */
    .form-page {
        min-height: 100vh;
        background: linear-gradient(
            rgba(0, 0, 0, 0.45),
            rgba(0, 0, 0, 0.45)
        ),
        url("https://images.unsplash.com/photo-1501785888041-af3ef285b470") center/cover no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    /* Card */
    .form-card {
        width: 100%;
        max-width: 520px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    /* Title */
    .form-title {
        font-size: 28px;
        font-weight: 600;
        text-align: center;
        margin-bottom: 6px;
    }

    .form-subtitle {
        font-size: 14px;
        color: #666;
        text-align: center;
        margin-bottom: 24px;
    }

    /* Form */
    .listing-form {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group label {
        font-size: 13px;
        font-weight: 500;
        margin-bottom: 6px;
        color: #333;
    }

    .form-group input,
    .form-group textarea {
        padding: 12px 14px;
        border-radius: 10px;
        border: 1px solid #ddd;
        font-size: 14px;
        outline: none;
        transition: all 0.2s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        border-color: #1e90ff;
        box-shadow: 0 0 0 2px rgba(30, 144, 255, 0.15);
    }

    /* Two-column row */
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 14px;
    }

    /* Button */
    .submit-btn {
        margin-top: 10px;
        padding: 14px;
        border-radius: 12px;
        border: none;
        background: linear-gradient(135deg, #1e90ff, #00bcd4);
        color: white;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
    }

    /* Responsive */
    @media (max-width: 480px) {
    .form-row {
            grid-template-columns: 1fr;
        }
    }

</style>


<div class="form-page">
  <div class="form-card">
    <h2 class="form-title">Create New Listing</h2>
    <p class="form-subtitle">Add a beautiful place for travelers to explore üåç</p>

    <form action="/listings" method="POST" class="listing-form">

      <div class="form-group">
        <label>Title *</label>
        <input type="text" name="listing[title]" placeholder="Mountain View Camp" required>
      </div>

      <div class="form-group">
        <label>Description</label>
        <textarea name="listing[description]" rows="3" placeholder="A peaceful stay surrounded by nature..."></textarea>
      </div>

      <div class="form-group">
        <label>Image URL</label>
        <input type="text" name="listing[img]" placeholder="Leave empty for default image">
      </div>

      <div class="form-row">
        <div class="form-group">
          <label>Price (‚Çπ)</label>
          <input type="number" name="listing[price]" placeholder="2500">
        </div>

        <div class="form-group">
          <label>Country</label>
          <input type="text" name="listing[country]" placeholder="India">
        </div>
      </div>

      <div class="form-group">
        <label>Location</label>
        <input type="text" name="listing[location]" placeholder="Manali, Himachal Pradesh">
      </div>

      <button class="submit-btn">Create Listing</button>

    </form>
  </div>
</div>
