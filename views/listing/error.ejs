<% layout("layouts/boilerplate") %>

<style>
  body {
    min-height: 100vh;
    background:
      radial-gradient(
        800px circle at 10% 10%,
        rgba(14, 165, 233, 0.15),
        transparent 40%
      ),
      radial-gradient(
        700px circle at 90% 20%,
        rgba(34, 197, 94, 0.15),
        transparent 40%
      ),
      linear-gradient(135deg, #f8fafc, #eef2f7);
  }

  .error-page {
    min-height: calc(100vh - 90px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 32px 20px;
  }

  .error-card {
    max-width: 520px;
    width: 100%;
    background: rgba(255, 255, 255, 0.96);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 42px 36px;
    text-align: center;
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.12),
      0 10px 20px rgba(0, 0, 0, 0.05);
  }

  .error-code {
    font-size: 64px;
    font-weight: 800;
    letter-spacing: -2px;
    background: linear-gradient(135deg, #0ea5e9, #22c55e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 8px;
  }

  .error-title {
    font-size: 22px;
    font-weight: 600;
    color: #0f172a;
    margin-bottom: 10px;
  }

  .error-message {
    font-size: 15px;
    color: #475569;
    line-height: 1.7;
    margin-bottom: 28px;
  }

  .error-actions {
    display: flex;
    gap: 14px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: linear-gradient(135deg, #0ea5e9, #22d3ee);
    border: none;
    color: white;
    padding: 12px 24px;
    border-radius: 999px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.25s ease;
    box-shadow: 0 10px 25px rgba(14, 165, 233, 0.35);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 32px rgba(14, 165, 233, 0.45);
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid rgba(15, 23, 42, 0.15);
    color: #0f172a;
    padding: 12px 22px;
    border-radius: 999px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.25s ease;
  }

  .btn-secondary:hover {
    background: rgba(15, 23, 42, 0.05);
  }

  @media (max-width: 480px) {
    .error-card {
      padding: 32px 26px;
    }

    .error-code {
      font-size: 52px;
    }
  }
</style>

<div class="error-page">
  <div class="error-card">

    <div class="error-code">
      <%= statusCode || 500 %>
    </div>

    <h1 class="error-title">
      <%= statusCode === 404 ? "Page Not Found" : "Something went wrong" %>
    </h1>

    <p class="error-message">
      <%= message || "An unexpected error occurred. Please try again later." %>
    </p>

    <div class="error-actions">
      <a href="/listings" class="btn-primary">Go to Home</a>
      <button type="button" class="btn-secondary" onclick="history.back()">
            Go Back
      </button>
    </div>

  </div>
</div>
